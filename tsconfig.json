{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "declaration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["es6"],
    "module": "ES2015",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2017",
    "types": ["node", "jest"]
  },
  "compileOnSave": true,
  "include": ["src"],
  "exclude": [
    "node_modules",
    "**/*.test.*"
  ]
}
